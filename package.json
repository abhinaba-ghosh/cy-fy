{
  "name": "cy-fy",
  "version": "0.1.1",
  "description": "Cypress starter pack for UI and API testing",
  "main": "index.js",
  "scripts": {
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:gherkin": "gherkin-lint -c ./.gherkin-lintrc cypress/**/*.feature",
    "lint": "npm run lint:fix && npm run lint:gherkin",
    "cy:e2e": "npm run clear && npm run cy:ui:headless && npm run report:ui",
    "cy:api": "npm run clear && npm run cy:api:run && npm run report:api",
    "cy:ui:dev": "cypress open --config-file config/e2e.config.json --browser chrome",
    "cy:ui:run": "cypress run --config-file config/e2e.config.json --env allure=true",
    "cy:api:run": "cypress run --config-file config/api.config.json --env allure=true",
    "cy:ui:headless": "cypress run --config-file config/e2e.config.json --env allure=true --headless --browser chrome",
    "report:ui": "npx allure generate reports/e2e/allure-results --clean -o reports/e2e/allure-report && allure open reports/e2e/allure-report",
    "report:api": "npx allure generate reports/api/allure-results --clean -o reports/api/allure-report && allure open reports/api/allure-report",
    "clear": "rm -r reports/** || true"
  },
  "dependencies": {
    "cucumber": "6.0.5",
    "cypress": "4.5.0",
    "cypress-cucumber-preprocessor": "2.0.1",
    "http-status-codes": "^1.4.0",
    "tsify": "4.0.1"
  },
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^1.6.0",
    "@types/cypress-cucumber-preprocessor": "1.14.1",
    "@typescript-eslint/eslint-plugin": "2.30.0",
    "@typescript-eslint/eslint-plugin-tslint": "2.30.0",
    "@typescript-eslint/parser": "2.30.0",
    "allure-commandline": "^2.13.0",
    "chai": "4.2.0",
    "coffeescript": "2.5.1",
    "del-cli": "^3.0.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-simple-import-sort": "5.0.3",
    "eslint-plugin-unicorn": "18.0.1",
    "gherkin-lint": "3.3.6",
    "husky": "3.0.0",
    "lint-staged": "9.2.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "sinon": "7.5.0",
    "sinon-chai": "^3.5.0",
    "ts-node": "8.3.0",
    "tslint": "^6.0.0",
    "typescript": "3.2.1"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "cucumberJson": {
      "generate": true,
      "outputFolder": "reports/cucumber-json",
      "filePrefix": "",
      "fileSuffix": ".cucumber"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 150
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "pretty-quick --staged"
    ],
    "*.ts": [
      "npm run lint:fix"
    ],
    "*.feature": [
      "npm run lint:gherkin"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
